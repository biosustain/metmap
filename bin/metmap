#!/usr/bin/env python
import argparse
from metmap.metmap import do_it_all

parser = argparse.ArgumentParser()
parser.add_argument("motif_file", type=argparse.FileType(), help="Plain text file with 1 motif per line")
parser.add_argument("-k", type=int, default=10, help="Copies of each de-ambigulated sequence generated from motifs with less than 2 N's.")
parser.add_argument("-l", type=int, default=12, help="Copies in total of motifs with 2 or more N's.")
parser.add_argument("-m", type=int, default=1, help="number of sequences to generate")
args = parser.parse_args()

print(do_it_all(args.motif_file, args.k, args.l, args.m))
